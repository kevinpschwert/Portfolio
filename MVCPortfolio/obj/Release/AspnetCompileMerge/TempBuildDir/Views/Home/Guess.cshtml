    <link href="~/Content/SyntaxHighlighter/shThemeEmacs.css" rel="stylesheet" />
    <link href="~/Content/style1.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <center><h1 id="title">Guess the Number</h1></center>
        <hr />
        <div class="row">
            <div class="col-md-5" id="left">
                <h3>Press start to start the game. Then pick a number between 1 and a 100 (there's a 2 guess penalty if you don't!) and it will tell you if you're too high or too low. The number you guessed will disappear below also to help you keep track of your guesses. Good luck!</h3>

                
                    <input type="number" style="color:black;" id="guess" /> <button type="submit" id="guessme">Guess!</button>
                    <center><button type="submit" id="pushme">Start!</button></center>
                    

                    <div class="row" id="shownumbers">                        
                        <div class="col-md-12">
                            @for (var i = 1; i < 101; i++)
                            {
                                <div class="col-md-1">

                                    <p id="num-@i" style="color:black;">@i</p>

                                </div>
                            }
                        </div>                        
                    </div>                
            </div>

            <div class="col-md-7" style="padding-top: 30px;">
                <pre class="brush: js">
                           
    // Guessing Game

        $("#pushme").click(function () {        
            $('#shownumbers').toggle('slow', function () {
            });
            $("#shownumbers").css({ 'display': "inline-block" });
            $("#guessme").css({ 'display': "inline-block" });
            $("#guess").css({ 'display': "inline-block" });
            $("#pushme").css({ 'display': "none" });
        
        function over() {
            $("#guess").val('');
            num = Math.round(Math.random() * 100);
            click = 1;
            for (var i = 1; i < 101; i++) {
                $("#num-" + i).show();
            }
        }        
        alert("Ready to start a new game!");       
        var num = Math.round(Math.random() * 100);
        $("#guess").val("");
        var click = 1;
        $("#guessme").click(function () {
            var guessnum = $("#guess").val();
            
            if (guessnum < 1 || guessnum > 100) {
                alert("You must pick a number between 1 and a 100! You're penalty is this click counts as 2");
                click += 2;
                $("#guess").val('');
            }
            else if (guessnum < num) {
                alert("You're too low!");
                $("#num-" + guessnum).hide();
                click++;
                $("#guess").val('');
            }
            else if (guessnum > num) {
                alert("You're too high!!");
                $("#num-" + guessnum).hide();
                click++;
                $("#guess").val('');
            }
            else {
                if (click === 1) {
                    alert("What!? You are amazing! You did it in one try!");
                    over();
                }
                else if (click > 1 && click < 9) {
                    alert("Yippee! It took you " + click + " tries to guess the number");
                    over();
                }
                else {
                    alert("Took you long enough! It took you " + click + " tries to guess the number");
                    over();
                }
            }          
        });
    });
</pre>

            </div>
        </div>
    </div>

