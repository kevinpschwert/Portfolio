<body>
    <br />
    <center><h1>Palindrome Exercise</h1></center>
    <hr />
    <br />

    <div class="container">
        <div class="row">
            <div class="col-xs-4">
                <h5>Please enter a word and then click the button to see if the word you entered is a palindrome</h5>
                <input type="text" id="inputtext" />
                <br />
                <br />
                <button id="answer">Press here</button>
                <br />
                <br />
                <font size="6" id="answer1" color="black"></font>
            </div>
            <div class="col-md-8">
                <pre class="brush: js">
               // Palindrome Exercise
               $("#answer").click(function() {
                 var str = $("#inputtext").val();
                 var regex = /[^0-9a-zA-Z]/g
                 str = str.toLowerCase().replace(regex, '');
                 var test = str.split("").reverse().join("");
                 if (test === str) {
                     $("#answer1").text("This is a palindrome.");
                 } else {
                     return $("#answer1").text("This is not a palindrome.");
                  }
                });
                </pre>

            </div>
        </div>
