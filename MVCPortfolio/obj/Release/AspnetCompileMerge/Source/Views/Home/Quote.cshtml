<body>
    <br />
    <h1>Random Quote Generator</h1>
    <hr />    
    <div class="container">
        <div class="row">
            <div class="col-md-5" style="padding-top: 40px;" >
                <h1>This is a random quote generator. It is pulling it's data from a Random Quote API. Click on the button to get a new quote!</h1>
                <main>                                         
                        <p id="author" class="quote-author"></p>
                        <span class="button-container">
                            <button type="submit" id="clickit">Get a new quote</button>
                            <a class="twitter-share-button" id="tweet" href="https://twitter.com/share" target="_blank" data-text="Random Quote Generator Zipline" data-via="littleblacksmth" data-size="large">Tweet</a>
                        </span>
                        <div id="quote-title"></div>
                        <center><div style="color:black;" id="quote-content"></div></center>
                        <br />
                        <center><div style="color:black;" id="quote-source"></div></center>
                    
                </main>
            </div>
            <div class="col-md-7" style="padding-top: 30px;">
                <pre class="brush: js">
               // Quote Generator
           
        $("#clickit").click(function () {
        $("#quote-content").html("");
        $("#quote-source").html("");
        var url = "http://api.forismatic.com/api/1.0/?method=getQuote&key=457653&format=jsonp&lang=en&jsonp=?";
        $.getJSON(url, function (data) {
            $("#quote-content").append(data.quoteText);
            if (data.quoteAuthor.length == 0)
            {
                $("#quote-source").append("- Anonymous");
            }
            else
            {
                $("#quote-source").append("- " + data.quoteAuthor);
            }
            
        });
    });




</pre>

            </div>
        </div>
